extends layout
    
block content
   section#container-reservacion
     div
       .container
         .row
           .col-md-12
             .well.well-sm
               form.form-horizontal(method='post')
                 fieldset
                   legend.text-center.header Contacto
                   .form-group
                     span.col-md-1.col-md-offset-2.text-center
                       i.fa.fa-user.bigicon
                     .col-md-8
                       input#fname.form-control(name='name', type='text', placeholder='Nombre')
                   .form-group
                     span.col-md-1.col-md-offset-2.text-center
                       i.fa.fa-user.bigicon
                     .col-md-8
                       input#lname.form-control(name='name', type='text', placeholder='Apellido')
                   .form-group
                     span.col-md-1.col-md-offset-2.text-center
                       i.fa.fa-envelope-o.bigicon
                     .col-md-8
                       input#email.form-control(name='email', type='text', placeholder='@email.com')
                   .form-group
                     span.col-md-1.col-md-offset-2.text-center
                       i.fa.fa-phone-square.bigicon
                     .col-md-8
                       input#phone.form-control(name='phone', type='text', placeholder='Telefono')
                   .form-group
                     span.col-md-1.col-md-offset-2.text-center
                       i.fa.fa-pencil-square-o.bigicon
                     .col-md-8
                       textarea#message.form-control(name='message', placeholder='Motivo de la visita.', rows='7')
                   .form-group
                     .col-md-12.text-center
                       button.btn.btn-primary.btn-lg(type='submit') Reservar
   footer#footer
     .footer-texto.fondo
       .margen
         p Contacto en: 
         .footer-img
           a(href='https://www.facebook.com/edgar.ceronmiranda')
             img.footer-img-1(src='images/facebook.png', alt='')
           a(href='')
             img.footer-img-2(src='images/linkedin.png', alt='')
         .footer-final
           p Terms & conditions Privacy policy Copyrights Notification
